# =============================================================================
# Cindral Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cindral
DATABASE_POOL_SIZE=10

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-must-be-at-least-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS (Optional - for social login)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# AI FEATURES (Optional)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
ENABLE_AI_FEATURES=false

# -----------------------------------------------------------------------------
# EMAIL (Optional - required for password reset)
# -----------------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=noreply@example.com

# -----------------------------------------------------------------------------
# STORAGE (Optional - for evidence packs)
# -----------------------------------------------------------------------------
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# MONITORING (Optional - recommended for production)
# -----------------------------------------------------------------------------
SENTRY_DSN=
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_REALTIME=false

# -----------------------------------------------------------------------------
# RUNTIME
# -----------------------------------------------------------------------------
NODE_ENV=development
