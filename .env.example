# =============================================================================
# Cindral Environment Variables
# Copy to .env.local and fill in values
# =============================================================================

# Database (Required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cindral

# Auth (Required)
BETTER_AUTH_SECRET=generate-a-random-32-char-string-here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Verification (set to true in production)
REQUIRE_EMAIL_VERIFICATION=false

# =============================================================================
# Email - Resend (Required for production)
# Sign up at https://resend.com, add your domain, get API key
# Set up webhooks at https://resend.com/webhooks for bounce/complaint handling
# =============================================================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx
EMAIL_FROM=Cindral <notifications@trycindral.com>

# =============================================================================
# OAuth Providers (Optional - enable as needed)
# =============================================================================

# Google - https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXT_PUBLIC_GOOGLE_ENABLED=false

# Microsoft - https://portal.azure.com
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common
NEXT_PUBLIC_MICROSOFT_ENABLED=false

# GitHub - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
NEXT_PUBLIC_GITHUB_ENABLED=false

# =============================================================================
# AI Features (Optional)
# =============================================================================
ANTHROPIC_API_KEY=
ENABLE_AI_FEATURES=false

# =============================================================================
# Payments - Stripe (Optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx
STRIPE_PRICE_ID_STARTER_MONTHLY=price_xxxx
STRIPE_PRICE_ID_STARTER_ANNUAL=price_xxxx
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxxx
STRIPE_PRICE_ID_PRO_ANNUAL=price_xxxx

# =============================================================================
# Monitoring (Optional but recommended for production)
# =============================================================================
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Analytics
NEXT_PUBLIC_AMPLITUDE_API_KEY=

# =============================================================================
# Storage - S3 (Optional - for evidence pack downloads)
# =============================================================================
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# Runtime
# =============================================================================
NODE_ENV=development
